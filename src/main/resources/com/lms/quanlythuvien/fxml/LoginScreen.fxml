<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.lms.quanlythuvien.controllers.LoginScreenController"
           prefHeight="700.0" prefWidth="1000.0"
           style="-fx-background-color: #f4f6f8;" stylesheets="@../css/styles.css">
    <children>
        <VBox alignment="TOP_CENTER" maxHeight="560.0" maxWidth="420.0" spacing="15.0"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0.3, 0, 0);">
            <padding>
                <Insets top="35.0" right="45.0" bottom="35.0" left="45.0"/>
            </padding>

            <children>
                <TextFlow textAlignment="CENTER" VBox.vgrow="NEVER">
                    <children>
                        <Text text="UET" styleClass="logo-text-uet"/>
                        <Text text="-" styleClass="logo-text-separator"/>
                        <Text text="VNU" styleClass="logo-text-vnu"/>
                    </children>
                </TextFlow>
                <Text text="Library" styleClass="logo-text-library-main" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </Text>

                <Label text="Chào mừng trở lại!" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2d3748;"/>
                <Label text="Đăng nhập để tiếp tục vào Thư viện số" style="-fx-font-size: 13px; -fx-text-fill: #555;"/>

                <Label fx:id="errorLabel" text="" styleClass="error-label" managed="false" visible="false">
                    <VBox.margin>
                        <Insets top="5.0" bottom="0"/>
                    </VBox.margin>
                </Label>

                <Label text="Địa chỉ Email" styleClass="form-label" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <TextField fx:id="emailField" promptText="vidu@vnu.edu.vn" styleClass="form-input"/>

                <Label text="Mật khẩu" styleClass="form-label">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Label>
                <HBox spacing="5" alignment="CENTER_LEFT" styleClass="form-input" style="-fx-padding: 0; -fx-border-width: 0;"> <padding><Insets left="10.0"/></padding> <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu của bạn" HBox.hgrow="ALWAYS"
                                                                                                                                                                                        style="-fx-background-color: transparent; -fx-border-width: 0; -fx-font-family: 'Arial'; -fx-font-size: 14px;"/>
                    <ImageView fx:id="togglePasswordVisibility" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;"
                               onMouseClicked="#togglePasswordVisibilityClicked">
                        <image><Image url="@../images/eye_slash_icon.png"/></image>
                        <HBox.margin><Insets right="8.0"/></HBox.margin>
                    </ImageView>
                </HBox>
                <TextField fx:id="visiblePasswordField" promptText="Nhập mật khẩu của bạn" styleClass="form-input" managed="false" visible="false"/>

                <HBox alignment="CENTER_RIGHT">
                    <Label fx:id="forgotPasswordLink" text="Quên mật khẩu?" styleClass="link-label"
                           onMouseClicked="#handleForgotPasswordLinkClick"/>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </HBox>

                <Button fx:id="loginButton" text="Đăng nhập" styleClass="primary-button"
                        maxWidth="Infinity" onAction="#handleLoginButtonAction">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Button>

                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="Người dùng mới?" style="-fx-font-size: 12px; -fx-text-fill: #4A5568;"/>
                    <Label fx:id="registerHereLink" text="Đăng ký tại đây" styleClass="link-label"
                           onMouseClicked="#handleRegisterHereLinkClick"/>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>