<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="userManagementRoot" spacing="15.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.quanlythuvien.controllers.UserManagementController"> <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>

    <Label styleClass="view-title" text="Quản lý Người dùng Thư viện">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <TextField fx:id="userFilterField" promptText="Lọc theo Username hoặc Email..." HBox.hgrow="ALWAYS" />
        <Button fx:id="addUserButton" text="Thêm Người dùng" styleClass="primary-button" onAction="#handleAddUserAction" />
        <Button fx:id="editUserButton" text="Sửa Thông tin" styleClass="secondary-button" onAction="#handleEditUserAction" disable="true" />
        <Button fx:id="deleteUserButton" text="Xóa Người dùng" styleClass="danger-button" onAction="#handleDeleteUserAction" disable="true" />
    </HBox>

    <TableView fx:id="usersTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="userIdColumn" prefWidth="150.0" text="User ID" />
            <TableColumn fx:id="usernameColumn" prefWidth="200.0" text="Username" />
            <TableColumn fx:id="emailColumn" prefWidth="250.0" text="Email" />
            <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Vai trò" />
            <TableColumn fx:id="activeLoansCountColumn" prefWidth="150.0" text="Sách Đang Mượn" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Separator fx:id="detailsSeparator" visible="false">
        <VBox.margin><Insets top="10.0" bottom="5.0"/></VBox.margin>
    </Separator>

    <VBox fx:id="userDetailsPane" spacing="10.0" visible="false" managed="false">
        <Label fx:id="selectedUserDetailsTitleLabel" styleClass="view-title" text="Chi tiết và Lịch sử mượn của: N/A">
            <font><Font size="16.0" /></font>
        </Label>
        <TableView fx:id="userLoanHistoryTableView" prefHeight="200.0">
            <placeholder>
                <Label text="Không có lịch sử mượn sách hoặc chưa chọn người dùng."/>
            </placeholder>
            <columns>
                <TableColumn fx:id="historyBookTitleColumn" prefWidth="250.0" text="Tiêu Đề Sách" />
                <TableColumn fx:id="historyBorrowDateColumn" prefWidth="120.0" text="Ngày Mượn" />
                <TableColumn fx:id="historyDueDateColumn" prefWidth="120.0" text="Ngày Hẹn Trả" />
                <TableColumn fx:id="historyReturnDateColumn" prefWidth="120.0" text="Ngày Trả Thực" />
                <TableColumn fx:id="historyStatusColumn" prefWidth="120.0" text="Trạng Thái" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
</VBox>