<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?> <VBox fx:id="userBookSearchRoot" spacing="15.0" styleClass="root" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lms.quanlythuvien.controllers.user.UserBookSearchController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Tìm Kiếm Sách Trong Thư Viện" styleClass="view-title" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="userSearchKeywordField" promptText="Nhập tiêu đề, tác giả, ISBN..." HBox.hgrow="ALWAYS" styleClass="form-input"/>
        <ComboBox fx:id="userSearchTypeComboBox" prefWidth="120" promptText="Tất cả"/>
        <Button fx:id="userSearchButton" text="Tìm kiếm" styleClass="primary-button" onAction="#handleUserSearchBooksAction"/>
    </HBox>

    <TableView fx:id="userBooksTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="userBookTitleColumn" prefWidth="250.0" text="Tiêu Đề"/>
            <TableColumn fx:id="userBookAuthorsColumn" prefWidth="180.0" text="Tác giả"/>
            <TableColumn fx:id="userBookPublisherColumn" prefWidth="150.0" text="Nhà Xuất Bản"/>
            <TableColumn fx:id="userBookYearColumn" prefWidth="100.0" text="Năm XB"/>
            <TableColumn fx:id="userBookAvailableColumn" prefWidth="100.0" text="Hiện có"/>
            <TableColumn fx:id="userBookDetailsColumn" prefWidth="100.0" text="Chi tiết"/> </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        <placeholder>
            <Label text="Nhập từ khóa để tìm sách hoặc không có sách nào phù hợp."/>
        </placeholder>
    </TableView>

</VBox>